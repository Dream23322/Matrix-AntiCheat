{
    "format_version": "1.18.20",
    "minecraft:entity": {
        "description": {
            "identifier": "matrix:aura",
            "is_spawnable": false,
            "is_summonable": true,
            "is_experimental": false
        },
        "components": {
            // When Entity get hit, remove the entity
            "minecraft:damage_sensor": {
                "triggers": {
                    "on_damage": {
                        "event": "matrix:gethit"
                    }
                }
            },
            // Set the entity health to 20
            "minecraft:health": {
                "value": 20,
                "max": 20
            },
            // Kill the entities after 3 seconds
            "minecraft:timer": {
                "time": 3,
                "looping": false,
                "time_down_event": {
                    "event": "matrix:despawn",
                    "target": "self"
                }
            },
            "minecraft:spell_effects": {
                // Add the slow falling effect (prevent the entity drop the void)
                "add_effects": [
                    {
                        "duration": 5,
                        "effect": "slow_falling",
                        "visible": false,
                        "amplifier": 0
                    },
                    {
                        "duration": 5,
                        "effect": "fire_resistance",
                        "visible": false,
                        "amplifier": 0
                    },
                    {
                        "duration": 5,
                        "effect": "invisibility",
                        "visible": false,
                        "amplifier": 0
                    }
                ]
            }
        },
        "component_groups": {
            "despawn": {
                "minecraft:instant_despawn": {
                    "remove_child_entities": true
                }
            },
            "gethit": {
                // Despawn the entity after a tick after the entity already get hit
                "minecraft:timer": {
                    "time": 0.05,
                    "looping": false,
                    "time_down_event": {
                        "event": "matrix:despawn",
                        "target": "self"
                    }
                }
            }
        },
        "events": {
            "matrix:despawn": {
                "add": {
                    "component_groups": [
                        "despawn"
                    ]
                }
            },
            "matrix:gethit": {
                "add": {
                    "component_groups": [
                        "gethit"
                    ]
                }
            }
        }
    }
}