{
	"format_version": "1.10.0",
	"animation_controllers": {
      "controller.animation.noswing": {
            "states": {
                "default": {
                    "transitions": [{
                        "noswing": "query.skin_id == 1"
                    }],
                    "on_entry": [
                        "/tag @s remove anticheat:attack"
                    ]
                },
                "noswing": {
                    "transitions": [{
                    "default": "query.skin_id != 1"
                    }],
                    "on_entry": [
                        "/tag @s add anticheat:attack"
                    ]
                }
            }
        }
    }
}