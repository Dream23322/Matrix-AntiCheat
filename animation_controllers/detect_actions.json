{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.ride": {
			"states": {
				"default": {
					"transitions": [{
						"ride": "query.is_riding"
					}],
					"on_entry": ["/tag @s remove anticheat:riding"]
				},
				"ride": {
					"transitions": [{
						"default": "!query.is_riding"
					}],
					"on_entry": ["/tag @s add anticheat:riding"]
				}
			}
		},
		"controller.animation.usingItem": {
			"states": {
				"default": {
					"transitions": [{
						"right": "query.is_using_item && query.get_equipped_item_name != 'fishing_rod'"
					}],
					"on_entry": ["/tag @s remove anticheat:usingItem"]
				},
				"right": {
					"transitions": [{
						"default": "!query.is_using_item"
					}],
					"on_entry": ["/tag @s add anticheat:usingItem"]
				}
			}
		},
		"controller.animation.moving": {
			"states": {
				"default": {
					"transitions": [{
						"move": "query.is_moving"
					}],
					"on_entry": ["/tag @s remove antichat:moving"]
				},
				"move": {
					"transitions": [{
						"default": "!query.is_moving"
					}],
					"on_entry": ["/tag @s add anticheat:moving"]
				}
			}
		},
		"controller.animation.openchest": {
			"states": {
				"default": {
					"transitions": [{
						"invmove": "query.variant == 1"
					}],
					"on_entry": ["/tag @s remove anticheat:hasGUIopen"]
				},
				"invmove": {
					"transitions": [{
						"default": "query.variant != 1"
					}],
					"on_entry": ["/tag @s add anticheat:hasGUIopen"]
				}
			}
		}
    }
}