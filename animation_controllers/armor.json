{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.head": {
			"states": {
				"default": {
					"transitions": [{
						"equip": "query.equipped_item_any_tag('slot.armor.head', 'minecraft:is_helmet')"
					}],
                    "on_entry": ["@s[tag=!anticheat:joining] anticheat:un_equip_armor"]
				},
				"equip": {
					"transitions": [{
						"default": "!query.equipped_item_any_tag('slot.armor.head', 'minecraft:is_helmet')"
					}],
