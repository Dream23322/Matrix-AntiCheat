{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.totem": {
			"states": {
				"default": {
					"transitions": [{
						"totem": "query.get_equipped_item_name('off_hand') !== 'totem_of_undying'"
					}]
				},
				"totem": {
					"transitions": [{
						"default": "query.get_equipped_item_name('off_hand') == 'totem_of_undying'"
					}],
					"on_entry": ["@s anticheat:wear_totem"]
				}
			}
		},
		"controller.animation.sheid": {
			"states": {
				"default": {
					"transitions": [{
						"shield": "query.get_equipped_item_name('off_hand') == 'shield'"
					}]
				},
				"shield": {
					"transitions": [{
						"default": "query.get_equipped_item_name('off_hand') !== 'shield'"
					}],
					"on_entry": ["@s anticheat:wear_sheid"]
				}
			}
		},
		"controller.animation.trident": {
			"states": {
				"default": {
					"transitions": [{
						"trident": "query.get_equipped_item_name('main_hand') == 'trident'"
					}],
					"on_entry": ["tag @s remove anticheat:trident"]
				},
				"trident": {
					"transitions": [{
						"default": "query.get_equipped_item_name('main_hand') !== 'trident'"
					}],
					"on_entry": ["tag @s add anticheat:trident"]
				}
			}
		}
    }
}